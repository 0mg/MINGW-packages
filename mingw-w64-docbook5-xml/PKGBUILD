#//DOCBOOK 5.1
  mkdir -p "$pkgdir${MINGW_PREFIX}/etc/xml"

  for ver in ${_vers_51x[@]}; do
    pushd docbook-xml-$ver
    _cat=docbook-$ver.xml
    ${MINGW_PREFIX}/bin/xmlcatalog  --noout --create "$pkgdir${MINGW_PREFIX}/etc/xml/${_cat}"
