          "../../share/xml/docbook/schema/xsd/$ver/docbook.xsd" \
          "$pkgdir${MINGW_PREFIX}/etc/xml/${_cat}"

      ${MINGW_PREFIX}/bin/xmlcatalog  --noout --add "rewriteSystem" \
          "http://docbook.org/xml/$ver/xsd/docbook.xsd" \
